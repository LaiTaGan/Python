<NavigationSwitcher>:
    MDBottomNavigation:
        #color stuff
        MDBottomNavigationItem:
            name: 'Production Screen'
            text: "Production"
            icon: 'home'
            MDBoxLayout:
                MainContainer:
                      
        MDBottomNavigationItem:
            name: 'Debugging Screen'
            text: "Debugging"
            icon: 'set-center'
            Screen:
                BoxLayout:
                    orientation:'vertical'
                BoxLayout:
                    MDLabel:
                        text: "2nd Page"
                        halign: "center"
        MDBottomNavigationItem:
            name: 'Setting Screen'
            text: "Setting"
            icon: 'wrench'
            Screen:
                BoxLayout:
                    orientation:'vertical'
                BoxLayout:
                    MDLabel:
                        text: "3rd Page"
                        halign: "center"
    MDToolbar:
        title: "Robot Arm Simulation"
        font_size: '50dp'
        spacing: "20dp"
        elevation_normal: 12
        pos_hint: {"top": 1}
        left_action_items:[['Images/user.png']]
        right_action_items:[["account", lambda x: root.loginscreen.open(), "Account"],["bell", lambda x: x, "Notification"],["lan-connect", lambda x: x, "Connection Status"],['exit-to-app', lambda x: root.exit(),"Exit Program"]]
        icon_color: 0, 1, 0, 1
    
